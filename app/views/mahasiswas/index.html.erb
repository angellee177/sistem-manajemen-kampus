<p id="notice"><%= notice %></p>

<h1>Mahasiswa</h1>

<table>
  <thead>
    <tr>
      <th>Nama</th>
      <th>Tanggal lahir</th>
      <th>Alamat</th>
      <th>Jurusan</th>
      <th>No telp</th>
      <th>Angkatan</th>
      <th>Kepala prodi</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mahasiswas.each do |mahasiswa| %>
      <tr>
        <td><%= mahasiswa.nama %></td>
        <td><%= mahasiswa.tanggal_lahir %></td>
        <td><%= mahasiswa.alamat %></td>
        <td><%= mahasiswa.jurusan %></td>
        <td><%= mahasiswa.no_telp %></td>
        <td><%= mahasiswa.angkatan %></td>
        <td><%= mahasiswa.kepala_prodi %></td>
        <td><%= image_tag mahasiswa.picture_url, width: '200px' if mahasiswa.picture.present? %></td>
        <td><%= link_to 'Show', mahasiswa %>|</td>
        <td><%= link_to 'Edit', edit_mahasiswa_path(mahasiswa) %>|</td>
        <td><%= link_to 'Destroy', mahasiswa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mahasiswa', new_mahasiswa_path %>
